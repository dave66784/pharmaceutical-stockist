# Copy this file to .env and fill in real values. Never commit .env to git.

# RSA key pair for JWT signing (RS256). Generate with:
#   openssl genrsa -out private.pem 2048
#   openssl pkcs8 -topk8 -nocrypt -inform PEM -outform DER -in private.pem | base64 -w0
#   openssl rsa -in private.pem -pubout -outform DER | base64 -w0
JWT_PRIVATE_KEY=<base64-encoded-PKCS8-DER-private-key>
JWT_PUBLIC_KEY=<base64-encoded-X509-DER-public-key>

# PostgreSQL password (default 'postgres' is fine for local dev)
DB_PASSWORD=postgres

# Gmail app password for email notifications (Settings → Security → App Passwords)
MAIL_PASSWORD=<gmail-app-password>
